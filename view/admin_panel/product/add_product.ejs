<%-include("../header")%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Add Product </h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">add Product name</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">add product name</h3>
                            </div>
                            <!-- form start -->
                            <form action="/admin/product/add" enctype="multipart/form-data" method="post">
                                <div class="card-body">
                                    <!-- category -->
                                    <div class="form-group">
                                        <label>Select Category</label>
                                        <select class="form-control" name="cat_id" id="category" onchange="get_sub()">
                                            <option> --select category--</option>
                                            <% category.forEach(element=> { %>
                                                <option value="<%= element.id  %>">
                                                    <%= element.category %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                    <div id="get_type_brand">
                                        <!-- color -->
                                        <div class="form-group">
                                            <label>Color</label>
                                            <textarea class="form-control" name="color" rows="3"
                                                placeholder="Enter Color Name Like This : black , blue "></textarea>
                                        </div>
                                    </div>
                                    <!-- Product name  -->
                                    <div class="form-group">
                                        <label for="f_name">Product Name</label>
                                        <input type="text" name="name" class="form-control" id="f_name"
                                            placeholder="Enter Product  Name">
                                    </div>
                                    <!-- description -->
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea class="form-control" name="description" rows="3"
                                            placeholder="product description ..."></textarea>
                                    </div>
                                    <!--  Price -->
                                    <div class="form-group">
                                        <label for="f_name">Price</label>
                                        <input type="number" name="price" class="form-control" id="f_name"
                                            placeholder="Enter Price ">
                                    </div>
                                    <!-- Old Price -->
                                    <div class="form-group">
                                        <label for="f_name">Old Price</label>
                                        <input type="number" name="old_price" class="form-control" id="f_name"
                                            placeholder="Enter Old Price">
                                    </div>
                                    <!-- discount -->
                                    <div class="form-group">
                                        <label for="f_name">Discount</label>
                                        <input type="number" name="discount" class="form-control" id="f_name"
                                            placeholder="Enter Discount % ">
                                    </div>

                                    <!-- image -->
                                    <div class="form-group">
                                        <label for="exampleInputFile">Image</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" name="image" class="custom-file-input"
                                                    id="exampleInputFile">
                                                <label class="custom-file-label" for="exampleInputFile">Add
                                                    Product
                                                    Image</label>
                                            </div>
                                            <div class="input-group-append">
                                                <span class="input-group-text">Upload</span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- mult_image -->
                                    <div class="form-group">
                                        <label for="exampleInputFile">Side Images</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" name="mul_image" class="custom-file-input"
                                                    id="exampleInputFile" multiple>
                                                <label class="custom-file-label" for="exampleInputFile">Add
                                                    Side product
                                                    Images</label>
                                            </div>
                                            <div class="input-group-append">
                                                <span class="input-group-text">Upload</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                        </form>
                        <!-- form end -->
                    </div>
                </div>
            </div>
    </div>
    </section>
    </div>

    <%-include("../footer")%>