<%- include('../header') %>
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>All Brand's</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">brand</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="card" style="padding: 20px;">
                    <div class="row">
                        <div class="col-12 ">
                            <%- include('../search') %>
                        </div>
                        <div class="col-12">
                            <!-- /.card-header -->
                            <div class="card-body">
                                <form action="/admin/slider/mul_del" method="post">
                                    <table id="example1" class="data-table table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>image</th>
                                                <th>Operation</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (const dt of data) {%>
                                                <tr style="vertical-align:middle;">
                                                   
                                                    <td style="vertical-align: middle;">
                                                        <img src="<%= dt.slider_image %>" alt=""
                                                            style="height: 50px; width: 100px;  object-fit: cover;">
                                                    </td>
                                                    

                                                    <td style="vertical-align: middle; text-align: center;">
                                                        <a href="/admin/slider/edit_page/<%= dt.id  %>" class="text-dark "
                                                            style="font-size: 20px; margin-right: 8px;"><i class="fa-solid fa-pen-to-square"></i></a>
                                                        <a href="/admin/slider/delete/<%= dt.id %>" class="text-dark "
                                                            style="font-size: 20px; margin-right: 8px;"><i
                                                                class="fa-solid fa-trash"></i></a>
                                                        <% if(dt.active){ %>
                                                            <a href="?status=Active&id=<%= dt.id %>" class="text-dark "
                                                                style="font-size: 20px; margin-right: 8px;"><i
                                                                    class="fa-solid fa-circle-check"
                                                                    style="color: rgb(0, 182, 0);"></i></a>
                                                            <% }else{ %>
                                                                <a href="?status=deActive&id=<%= dt.id %>"
                                                                    class="text-dark "
                                                                    style="font-size: 20px; margin-right: 8px;"><i
                                                                        class="fa-regular fa-circle-check"
                                                                        style="color: red"></i></a>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <%} %>

                                        </tbody>
                                        <tfoot>
                                            <tr>
                                       
                                                <th>slider_image</th>
                                                <th>Operation</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </form>
                            </div>
                            <div class="card-footer clearfix">
                                <ul class="pagination pagination-sm m-0 float-right">
                                    <% var page_c=page; var pre=--page; %>
                                        <% if(pre>0){ %>
                                            <li class="page-item"><a href="?page=<%= pre %>&search=<%= search %>"
                                                    class="page-link" href="#">&laquo;</a></li>
                                            <% } %>
                                                <% for (let p=1; p <=count; p++) { %>
                                                    <li class="page-item"><a class="page-link"
                                                            href="?page=<%= p %>&search=<%= search %>">
                                                            <%= p %>
                                                        </a></li>
                                                    <% } %>
                                                        <% var next=++page_c %>
                                                            <% if(next<=count){ %>
                                                                <li class="page-item"><a
                                                                        href="?page=<%= next %>&search=<%= search %>"
                                                                        class="page-link" href="#">&raquo;</a></li>
                                                                <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <%- include('../footer') %>